<lxs>
    <scene root="demoRoot" axis_length="5"/>

    <views default="defaultCamera">
        <perspective id="defaultCamera" near="0.1" far="500" angle="45">
            <from x="150" y="120" z="150" />
            <to x="0" y="0" z="0" />
        </perspective>
    </views>

    <ambient>
        <ambient r="1.0" g="1.0" b="1.0" a="1.0" />
        <background r="0.0" g="0.0" b="0.0" a="1.0" />
    </ambient>

    <lights>
        <omni id="demoLight" enabled="1">
            <location x="9.8" y="11.9" z="10" w="1.0" />
            <ambient r="0" g="0" b="0" a="1.0" />
            <diffuse r="1.0" g="1.0" b="1.0" a="1.0" />
            <specular r="1.0" g="1.0" b="1.0" a="1.0" />
        </omni>
    </lights>

    <textures>
        <texture id="backgroundTexture" file="img/backgroundTexture.jpg" />
        <texture id="beltTexture" file="img/beltTexture.png" />
        <texture id="earthTexture" file="img/earthTexture.jpg" />
        <texture id="jupiterTexture" file="img/earthTexture.jpg" />
        <texture id="marsTexture" file="img/marsTexture.jpg" />
        <texture id="mercuryTexture" file="img/mercuryTexture.jpg" />
        <texture id="neptuneTexture" file="img/neptuneTexture.jpg" />
        <texture id="saturnRingTexture" file="img/saturnRingTexture.png" />
        <texture id="saturnTexture" file="img/saturnTexture.jpg" />
        <texture id="sunTexture" file="img/sunTexture.jpg" />
        <texture id="uranusTexture" file="img/uranusTexture.jpg" />
        <texture id="venusTexture" file="img/venusTexture.jpg" />
    </textures>

    <!--O sol devera ser o foco de luz do sistema-->
    <!--Venus devera ter um material ligeiramente refletor-->
    <!--Os aneis deverão tambem ser ligeiramente refletores-->
    <!--Os restantes elementos ou difusos ou sem qualquer tipo de emissão de luz-->
    <materials>
        <material id="sunMaterial" shininess="10">
            <emission r="0.0" g="0.0" b="0.0" a="1.0" />
            <ambient r="1.0" g="0.0" b="0.0" a="1.0" />
            <diffuse r="0.6" g="0.0" b="0.0" a="1.0" />
            <specular r="0.6" g="0.0" b="0.0" a="1.0" />
        </material>

        <material id="venusMaterial" shininess="10">
            <emission r="0.0" g="0.0" b="0.0" a="1.0" />
            <ambient r="1.0" g="0.0" b="0.0" a="1.0" />
            <diffuse r="0.6" g="0.0" b="0.0" a="1.0" />
            <specular r="0.6" g="0.0" b="0.0" a="1.0" />
        </material>

        <material id="planetMaterial" shininess="10">
            <emission r="0.0" g="0.0" b="0.0" a="1.0" />
            <ambient r="1.0" g="0.0" b="0.0" a="1.0" />
            <diffuse r="0.6" g="0.0" b="0.0" a="1.0" />
            <specular r="0.6" g="0.0" b="0.0" a="1.0" />
        </material>

        <material id="ringMaterial" shininess="10">
            <emission r="0.0" g="0.0" b="0.0" a="1.0" />
            <ambient r="1.0" g="0.0" b="0.0" a="1.0" />
            <diffuse r="0.6" g="0.0" b="0.0" a="1.0" />
            <specular r="0.6" g="0.0" b="0.0" a="1.0" />
        </material>

    </materials>

    <transformations>
        
    </transformations>

    <primitives>

        <!-- PLANETS AND SUN -->
    <primitive id="sunSphere">
            <sphere radius="7" slices="20" stacks="20"/>
        </primitive>

        <primitive id="mercurySphere">
            <sphere radius="1" slices="20" stacks="20"/>
        </primitive>

        <primitive id="venusSphere">
            <sphere radius="1.5" slices="20" stacks="20"/>
        </primitive>

        <primitive id="earthSphere">
            <sphere radius="1.5" slices="20" stacks="20"/>
        </primitive>

        <primitive id="marsSphere">
            <sphere radius="1.5" slices="20" stacks="20"/>
        </primitive>

        <primitive id="jupiterSphere">
            <sphere radius="4" slices="20" stacks="20"/>
        </primitive>

        <primitive id="saturnSphere">
            <sphere radius="3.5" slices="20" stacks="20"/>
        </primitive>

        <primitive id="uranusSphere">
            <sphere radius="3" slices="20" stacks="20"/>
        </primitive>

        <primitive id="neptuneSphere">
            <sphere radius="3.5" slices="20" stacks="20"/>
        </primitive>
   
            <!-- RINGS   -->
        <primitive id="saturnRingTorus">
            <torus inner="1" outer="6" slices="20" loops="7"/>
        </primitive> 

        <primitive id="neptuneRingTorus">
            <torus inner="0.5" outer="5" slices="20" loops="7"/>
        </primitive> 

            <!-- ASTEROID BELTS AND ORBIT -->
        <primitive id="orbitTorus">
            <torus inner="0.02" outer="10.0" slices="60" loops="2"/>
        </primitive>  

        <primitive id="kuiperBeltTorus">
            <torus inner="3" outer="100.0" slices="60" loops="2"/>
        </primitive>   

        <primitive id="asteroidBeltTorus">
            <torus inner="3" outer="50.0" slices="60" loops="2"/>
        </primitive>   

    </primitives>

    <components>

        <component id="demoRoot">
            <transformation>
            </transformation>
            <materials>
                <material id="sunMaterial" /> <!--temp-->
            </materials>
            <texture id="backgroundTexture" />
            <children>
                <componentref id="sun" />
                <componentref id="mercury" />
                <componentref id="venus" />
                <componentref id="earth" />
                <componentref id="jupiter" />
                <componentref id="saturn" />
                <componentref id="neptune" />
                <componentref id="uranus" />
                <componentref id="kuiperBelt" />
                <componentref id="asteroidBelt" />
            </children>
        </component> 

        <component id="sun">
            <transformation>
                <!--o sol esta na origem, nao necessita transfs-->
            </transformation>
            <materials>
                <material id="sunMaterial" />
            </materials>
            <texture id="sunTexture" />
            <children>
                <primitiveref id="sunSphere" />
            </children>
        </component>

        <component id="mercury">
            <transformation>
                <translate x="10" y="0" z="0" />
            </transformation>
            <materials>
                <material id="planetMaterial" />
            </materials>
            <texture id="mercuryTexture"/>
            <children>
                <primitiveref id="mercurySphere" />
            </children>
        </component>

        <component id="venus">
            <transformation>
                <translate x="20" y="0" z="0" />
                <rotate axis="y" angle="270" />
            </transformation>
            <materials>
                <material id="venusMaterial" />
            </materials>
            <texture id="venusTexture"/>
            <children>
                <primitiveref id="venusSphere" />
            </children>
        </component>

        <component id="earth">
            <transformation>
                <translate x="30" y="0" z="0" />
                <rotate axis="y" angle="45" />
            </transformation>
            <materials>
                <material id="planetMaterial" />
            </materials>
            <texture id="earthTexture"/>
            <children>
                <primitiveref id="earthSphere" />
            </children>
        </component>

        <component id="mars">
            <transformation>
                <translate x="40" y="0" z="0" />
                <rotate axis="y" angle="180" />
            </transformation>
            <materials>
                <material id="planetMaterial" />
            </materials>
            <texture id="marsTexture"/>
            <children>
                <primitiveref id="marsSphere" />
            </children>
        </component>

        <component id="jupiter">
            <transformation>
                <translate x="60" y="0" z="0" />
                <rotate axis="y" angle="315" />
            </transformation>
            <materials>
                <material id="planetMaterial" />
            </materials>
            <texture id="jupiterTexture"/>
            <children>
                <primitiveref id="jupiterSphere" />
            </children>
        </component>

        <component id="saturnPlanet">
            <transformation>
            </transformation>
            <materials>
                <material id="planetMaterial" />
            </materials>
            <texture id="saturnTexture"/>
            <children>
                <primitiveref id="saturnSphere" />
            </children>
        </component>

        <component id="saturnRings">
            <transformation>
                <scale x="1" y="1" z="0" />
                <rotate axis="x" angle="60" />
            </transformation>
            <materials>
                <material id="ringMaterial" />
            </materials>
            <texture id="saturnRingTexture"/>
            <children>
                <primitiveref id="saturnRingTorus" />
            </children>
        </component>

        <component id="saturn">
            <transformation>
                <translate x="70" y="0" z="0" />
                <rotate axis="y" angle="90" />
            </transformation>
            <materials>
                <material id="inherit" />            <!--??-->
            </materials>
            <texture id="inherit" length_s="1.0" length_t="1.0"/> <!--??-->
            <children>
                <componentref id="saturnPlanet" />
                <componentref id="saturnRings" />
            </children>
        </component>

        <component id="uranus">
            <transformation>
                <translate x="80" y="0" z="0" />
                <rotate axis="y" angle="225" />
            </transformation>
            <materials>
                <material id="planetMaterial" /> 
            </materials>
            <texture id="uranusTexture"/>
            <children>
                <primitiveref id="uranusSphere" />
            </children>
        </component>

        <component id="neptunePlanet">
            <transformation>
            </transformation>
            <materials>
                <material id="planetMaterial" />
            </materials>
            <texture id="neptuneTexture"/>
            <children>
                <primitiveref id="neptuneSphere" />
            </children>
        </component>

        <component id="neptuneRings">
            <transformation>
                <scale x="1" y="1" z="0" />
                <rotate axis="x" angle="18" />
            </transformation>
            <materials>
                <material id="ringMaterial" /> 
            </materials>
            <texture id="saturnRingTexture"/>
            <children>
                <primitiveref id="neptuneRingTorus" />
            </children>
        </component>

        <component id="neptune">
            <transformation>
                <translate x="90" y="0" z="0" />
            </transformation>
            <materials>
                <material id="inherit" />           <!--??-->
            </materials>
            <texture id="inherit" length_s="1.0" length_t="1.0"/>                 <!--??-->
            <children>
                <componentref id="neptunePlanet" />
                <componentref id="neptuneRings" />
            </children>
        </component>

        <component id="kuiperBelt">
            <transformation>
                <rotate axis="x" angle="90" />
            </transformation>
            <materials>
                <material id="ringMaterial" /> <!--to be replaced with beltMaterial-->
            </materials>
            <texture id="beltTexture"/>
            <children>
                <primitiveref id="kuiperBeltTorus" />
            </children>
        </component>

        <component id="asteroidBelt">
            <transformation>
                <rotate axis="x" angle="90" />
            </transformation>
            <materials>
                <material id="ringMaterial" /> <!--to be replaced with beltMaterial-->
            </materials>
            <texture id="beltTexture"/>
            <children>
                <primitiveref id="asteroidBeltTorus" />
            </children>
        </component>        

    </components>
</lxs>