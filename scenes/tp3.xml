            <materials>
                <material id="backgroundMaterial" />
            </materials>
            <texture id="backgroundTexture"/>
            <children>
                <primitiveref id="backgroundRectangle" />
            </children>
        </component>

        <component id="backgroundLeftRectangle">
            <transformation>
                <rotate axis="y" angle="90"/>
                <translate x="-1" y="0" z="0"/>
            </transformation>
            <animation>
            </animation>
            <materials>
                <material id="backgroundMaterial" />
            </materials>
            <texture id="backgroundTexture"/>
            <children>
                <primitiveref id="backgroundRectangle" />
            </children>
        </component>

        <component id="backgroundTopRectangle">
            <transformation>
                <rotate axis="x" angle="90"/>
                <translate x="0" y="0" z="-1"/>
            </transformation>
            <animation>
            </animation>
            <materials>
                <material id="backgroundMaterial" />
            </materials>
            <texture id="backgroundTexture"/>
            <children>
                <primitiveref id="backgroundRectangle" />
            </children>
        </component>

        <component id="backgroundBottomRectangle">
            <transformation>
                <rotate axis="x" angle="-90"/>
                <translate x="0" y="-1" z="0"/>
            </transformation>
            <animation>
            </animation>
            <materials>
                <material id="backgroundMaterial" />
            </materials>
            <texture id="cuboidTexture"/>
            <children>
                <primitiveref id="backgroundRectangle" />
            </children>
        </component>

        <component id="backgroundCube">
            <transformation>
                <translate x="-15" y="0" z="-15"/>
