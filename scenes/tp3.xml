            <materials>
                <material id="cuboidMaterial" />
            </materials>
            <texture id="inherit"/>
            <children>
                <componentref id="boardEnemyGrid"/>
                <componentref id="boardPlayerGrid"/>
            </children>
        </component>

        <component id="board2">
            <transformation>
                <translate x="0" y="4.6" z="-8"/>
