<lxs>
    <scene root="demoRoot" axis_length="5"/>

    <views default="defaultCamera">
        <perspective id="defaultCamera" near="0.1" far="500" angle="45">
            <from x="0" y="12" z="12" />
            <to x="0" y="0" z="-5" />
        </perspective>

        <perspective id="sunCamera" near="0.1" far="500" angle="45">
            <from x="0" y="12" z="-15" />
            <to x="0" y="0" z="0" />
        </perspective>

        <!--desnecessaria (?)-->
        <perspective id="earthCamera" near="0.1" far="500" angle="45">
            <from x="35" y="8" z="-20" />
            <to x="20" y="0" z="-20" />
        </perspective>
    </views>

    <ambient>
        <ambient r="1.0" g="1.0" b="1.0" a="1.0" />
        <background r="0.5" g="0.5" b="0.5" a="1.0" />
    </ambient>

    <lights>
        <omni id="demoLight" enabled="1">
            <location x="25" y="25" z="25" w="1.0" />
            <ambient r="1.0" g="1.0" b="1.0" a="1.0" />
            <diffuse r="1.0" g="1.0" b="1.0" a="1.0" />
            <specular r="1.0" g="1.0" b="1.0" a="1.0" />
        </omni>

        <omni id="secondLight" enabled="0">
            <location x="30" y="30" z="30" w="1.0" />
            <ambient r="1" g="1" b="1" a="1.0" />
            <diffuse r="0.0" g="0.0" b="0.0" a="1.0" />
            <specular r="0.0" g="0.0" b="0.0" a="1.0" />
        </omni>
    </lights>

    <textures>
        <texture id="backgroundTexture" file="img/backgroundTexture.jpg" />
        <texture id="leftBackgroundTexture" file="img/leftBackgroundTexture.jpg" />
        <texture id="cuboidTexture" file="img/cuboidTexture.jpg" />
        <texture id="boardTexture" file="img/board.png"/>
        <texture id="boatTexture" file="img/boatTexture.jpg" />
        <texture id="redPinTexture" file="img/redPinTexture.jpg" />
    </textures>

    <materials>
        <material id="planetMaterial" shininess="1">
            <emission r="0.0" g="0.0" b="0.0" a="0.0" />
            <ambient r="0.0" g="0.0" b="0.0" a="1.0" />
            <diffuse r="0.6" g="0.0" b="0.0" a="1.0" />
            <specular r="0.6" g="0.0" b="0.0" a="1.0" />
        </material>

        <material id="backgroundMaterial" shininess="1">
            <emission r="0.0" g="0.0" b="0.0" a="0.0" />
            <ambient r="0.0" g="0.0" b="0.0" a="1.0" />
            <diffuse r="0.0" g="0.0" b="0.0" a="1.0" />
            <specular r="0.0" g="0.0" b="0.0" a="1.0" />
        </material>

        <material id="beltMaterial" shininess="1">
            <emission r="0.0" g="0.0" b="0.0" a="1.0" />
            <ambient r="1.0" g="0.0" b="0.0" a="1.0" />
            <diffuse r="0.6" g="0.0" b="0.0" a="1.0" />
            <specular r="0.6" g="0.0" b="0.0" a="1.0" />
        </material>

        <material id="cuboidMaterial" shininess="1">
            <emission r="0.0" g="0.0" b="0.0" a="1.0" />
            <ambient r="1.0" g="0.0" b="0.0" a="1.0" />
            <diffuse r="0.6" g="0.0" b="0.0" a="1.0" />
            <specular r="0.6" g="0.0" b="0.0" a="1.0" />
        </material>

    </materials>

    <transformations>
    </transformations>

    <animations>
        <animation id="test">
            <keyframe instant="10.0">
                <translate x="20.0" y="0.0" z="0.0" />
                <rotate angle_x="0.0" angle_y="120.0" angle_z="0.0" />
                <scale x="1.5" y="1.5" z="1.5" />
            </keyframe>
            <keyframe instant="20.0">
                <translate x="60.0" y="0.0" z="0.0" />
                <rotate angle_x="0.0" angle_y="240.0" angle_z="0.0" />
                <scale x="0.5" y="0.5" z="0.5" />
            </keyframe>
            <keyframe instant="30.0">
                <translate x="0.0" y="0.0" z="0.0" />
                <rotate angle_x="0.0" angle_y="360.0" angle_z="0.0" />
                <scale x="1.0" y="1.0" z="1.0" />
            </keyframe>
        </animation>

    </animations>

    <primitives>
        
        <!-- BACKGROUND -->
        <primitive id="backgroundRectangle">
            <rectangle x1="0.0" x2="1.0" y1="0.0" y2="1.0"/>
        </primitive>

        <!-- SPHERE -->
        <primitive id="sphere">
            <sphere radius="1.0" slices="10.0" stacks="10.0"/>
        </primitive>

        <primitive id="cylinder">
            <cylinder base="0.5" top="0.5" height="1.0" slices="10" stacks="1"/>
        </primitive>

        <primitive id="torus">
            <torus inner="0.5" outer="1.1" slices="10" loops="5"/>
        </primitive>

        <primitive id="cuboid">
            <cuboid/>
        </primitive>

    </primitives>

    <components>

        <component id="demoRoot">
            <transformation>
            </transformation>
            <animation>
            </animation>
            <materials>
                <material id="planetMaterial" />
            </materials>
            <texture id="backgroundTexture" />
            <children>
                <componentref id="backgroundCube" />-->
                <componentref id="table" />
                <componentref id="board"/>
                <componentref id="board2"/>
                <componentref id="submarine" />
                <componentref id="carrier"/>
                <componentref id="boat3"/>
                <componentref id="boat4"/>
                <componentref id="boat5"/>
                <componentref id="whitePin"/>
                <componentref id="redPin"/>
            </children>
        </component> 


        <!-- BACKGROUND -->
        <component id="backgroundFrontRectangle">
            <transformation>
            </transformation>
            <animation>
            </animation>
            <materials>
                <material id="backgroundMaterial" />
            </materials>
            <texture id="backgroundTexture"/>
            <children>
                <primitiveref id="backgroundRectangle" />
            </children>
        </component>

        <component id="backgroundBackRectangle">
            <transformation>
                <rotate axis="y" angle="-180"/>
                <translate x="-1" y="0" z="-1"/>
            </transformation>
            <animation>
            </animation>
            <materials>
                <material id="backgroundMaterial" />
            </materials>
            <texture id="backgroundTexture"/>
            <children>
                <primitiveref id="backgroundRectangle" />
            </children>
        </component>

        <component id="backgroundRightRectangle">
            <transformation>
                <rotate axis="y" angle="-90"/>
                <translate x="0" y="0" z="-1"/>
            </transformation>
            <animation>
